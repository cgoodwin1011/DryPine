.container.pb-modalreglog-container
  .row
    .col-xs-12.col-md-4.col-md-offset-4
      legend.pb-modalreglog-legend Modal registration form
      .input-group.pb-modalreglog-input-group
        button.btn.btn-primary.pb-modalreglog-submit(data-toggle='modal', id="logIn" data-target='#myModal') Login
        button.btn.btn-primary.pb-modalreglog-submit(data-toggle='modal', id= "register" data-target='#myModal2') Register
      #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
              h4#myModalLabel.modal-title Login form
            .modal-body
              form
                .form-group
                  label(for='email') Email address
                  .input-group.pb-modalreglog-input-group
                    input#email.form-control(type='email', placeholder='Email')
                    span.input-group-addon
                      span.glyphicon.glyphicon-user
                .form-group
                  label(for='password') Password
                  .input-group.pb-modalreglog-input-group
                    input#pws.form-control(type='password', placeholder='Password')
                    span.input-group-addon
                      span.glyphicon.glyphicon-lock
            .modal-footer
              button.btn.btn-secondary(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='button') Log in
      #myModal2.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog.modal-sm(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
              h4#myModalLabel.modal-title Registration form
            .modal-body
              form.pb-modalreglog-form-reg
                .form-group
                  #pb-modalreglog-progressbar
                .form-group
                  label(for='email') Email address
                  .input-group.pb-modalreglog-input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-user
                    input#inputEmail.form-control(type='email', placeholder='Email')
                .form-group
                  label(for='password') Password
                  .input-group.pb-modalreglog-input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-lock
                    input#inputPws.form-control(type='password', placeholder='Password')
                
            .modal-footer
              button.btn.btn-secondary(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='button') Sign up
